{
  "jpsType": "install",
  "application": {
    "name": "Payara Server Full",
    "homepage": "http://www.payara.fish/",
    "description": "Example of Payara Server in Docker",
    "env": {
      "topology": {
        "nodes": [
          {
            "nodeType": "docker",
            "cloudlets": 16,
            "count": 1,
            "nodeGroup": "cp",
            "docker": {
              "image": "payara/server-full",
              "cmd": "/opt/payara41/bin/asadmin start-domain"
            }
          }
        ]
      }
    },
    "onInstall": [{
      "executeScript": {
        "type": "js",
        "script": "https://raw.githubusercontent.com/jelastic/payara/master/payara-server-full/add-endpoint.js",
        "params": {
          "nodeGroup": "cp",
          "name": "AdminPort",
          "port": 4848
        }
      }
    },{
      "install": {
        "jps": "https://raw.githubusercontent.com/dzotic9/payara/master/payara-server-full/sendEmail.jps",
        "settings": {
          "port": "${this.port}"
        }
      }
    }]
  }
}
