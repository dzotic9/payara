{
  "jpsType": "update",
  "application": {
    "name": "Managed Load Balancer for Payara micro cluster",
    "homepage": "http://www.payara.fish/",
    "description": "Autoscalable Load Balancer",
    "env": {
      "topology": {
        "nodes": [
          {
            "nodeType": "docker",
            "cloudlets": 16,
            "count": 1,
            "nodeGroup": "bl",
            "docker": {
              "image": "jelastic/haproxy-managed-lb",
              "volumes": [
                "/usr/local/etc/haproxy"
              ]
            }
          }
        ]
      },
      "onAfterScaleOut[nodeGroup:cp]": {
        "call": [
          "addClusterMembers"
        ]
      },
      "onAfterScaleIn[nodeGroup:cp]": {
        "forEach(event.response.nodes)": {
          "execCmd": {
            "nodeGroup": "bl",
            "commands": [
              "/root/lb_manager.sh --removehost ${@i.intIP}"
            ]
          }
        }
      }
    },
    "onInstall": [
      {
        "call": [
          "add-lb-layer",
          "add-cluster-members"
        ]
      },
      {
        "installAddon": {
          "id": "add-cluster-members-addon",
          "nodeGroup": "cp"
        }
      }
    ],
    "addons": {
      "id": "add-cluster-members-addon",
      "onInstall": {
        "call": "add-cluster-members"
      }
    },
    "procedures": [
      {
        "id": "add-cluster-members",
        "onCall": {
          "forEach(nodes.cp)": {
            "execCmd": {
              "nodeGroup": "bl",
              "commands": [
                "/root/lb_manager.sh --addhosts ${@i.intIP}"
              ]
            }
          }
        }
      },
      {
        "id": "add-lb-layer",
        "onCall": [
          {
            "addNodes": {
              "nodeType": "docker",
              "cloudlets": 16,
              "dockerName": "jelastic/haproxy-managed-lb",
              "dockerTag": "latest",
              "displayName": "LoadBalancer",
              "nodeGroup": "bl",
              "metadata": {
                "layer": "bl"
              }
            }
          }
        ]
      }
    ]
  }
}
